<script type="text/javascript" language="JavaScript">
  $(document).on('ready page:load', function(){  
    options =	{ 
			position : 'top',
			align	 : 'center',						
			innerHtmlStyle: {
								color:'#FFFFFF', 
								'text-align':'left',
								padding:'2px',
								'font-size':'13px'
							},																
			themeName: 	'all-grey',
			themePath: 	'../../../images/jquerybubblepopup-theme'
		};          
  });
</script>

<div class="page-header">
    <div class="icon">
      <span class="ico-arrow-right"></span>
    </div>
    <h1>Profils <small>Attribuer ou retirer des droits aux utilisateurs liés à ces profils</small></h1>
</div>

<div class = "row-fluid">
  <div class = "span12">
    <%= render 'layouts/flash_messages' %>
    <div id = "custom_messages">
    </div>
    <% if !@error_messages.blank? %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if !@alert_messages.blank? %>  
      <div class = "alert alert-info">         
        <% @alert_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
    <% if !@success_messages.blank? %> 
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
     
    <div class = "block">
      <div class = "head blue">
        <div class = "icon">
          <i class = "ico-layout-9"></i>
        </div>
        <h2>Liste des profils</h2>
        <ul class = "buttons">
          <li>
            <a href = "javascript:history.go(-1);" alt = "Aller à la page précédente">
              <div class = "icon">
                <span class = "ico-arrow-left">
                               
                </span>
              </div>
            </a>
          </li>
        </ul>
      </div>
      <div class = "data-fluid">
        <table class = "table" cellpading = "0" cellspacing = "0" width = "100%">
          <thead>
            <tr>
              <th width = "61%">
                Droits
              </th>
              <th width = "39%">
                Nom du profil
              </th>                           
            </tr>
          </thead>
          <tbody>
            <% if @profiles.blank? %>
              <tr>
                <td colspan = "2">Aucun profil à afficher</td>
              </tr>
            <% else %>
              <% @profiles.each do |profile| %>                
                <tr>                 
                  <td>
                    <% if profile.create_user == false or profile.create_user.blank? %>                  
					            <%= link_to "<div class = 'icon'><span class = 'ico-group'></span></div>".html_safe, enable_create_user_right_path(profile.id), :class => "button green", :id => "enable_create_user_#{profile.id}", :title => "Activer le droit de création d'utilisateurs", :confirm => "Êtes vous sûr de vouloir activer le droit de création d'utilisateurs?" %>					            
					          <% else %>
					            <%= link_to "<div class = 'icon'><span class = 'ico-group'></span></div>".html_safe, disable_create_user_right_path(profile.id), :class => "button red", :id => "disable_create_user_#{profile.id}", :title => "Désactiver le droit de création d'utilisateurs", :confirm => "Êtes vous sûr de vouloir désactiver le droit de création d'utilisateurs?" %>
					          <% end %>
					          
					          <% if profile.edit_user_data == false or profile.edit_user_data.blank? %>                  
					            <%= link_to "<div class = 'icon'><span class = 'ico-group'></span></div>".html_safe, enable_edit_user_data_right_path(profile.id), :class => "button blue", :id => "enable_edit_user_data_#{profile.id}", :title => "Activer le droit de modification de données utilisateur", :confirm => "Êtes vous sûr de vouloir activer le droit de modification de données utilisateurs?" %>					            
					          <% else %>
					            <%= link_to "<div class = 'icon'><span class = 'ico-group'></span></div>".html_safe, disable_edit_user_data_right_path(profile.id), :class => "button yellow", :id => "disable_edit_user_data_#{profile.id}", :title => "Désactiver le droit de modification de données utilisateur", :confirm => "Êtes vous sûr de vouloir désactiver le droit de modification de données utilisateurs?" %>
					          <% end %>
					          
					          <% if profile.create_profile == false or profile.create_profile.blank? %>                  
					            <%= link_to "<div class = 'icon'><span class = 'ico-user'></span></div>".html_safe, enable_create_profile_right_path(profile.id), :class => "button green", :id => "enable_create_profile_#{profile.id}", :title => "Activer le droit de création de profil utilisateur", :confirm => "Êtes vous sûr de vouloir activer le droit de création de profils?" %>					            
					          <% else %>
					            <%= link_to "<div class = 'icon'><span class = 'ico-user'></span></div>".html_safe, disable_create_profile_right_path(profile.id), :class => "button red", :id => "disable_create_profile_#{profile.id}", :title => "Désactiver le droit de création de profil utilisateur", :confirm => "Êtes vous sûr de vouloir désactiver le droit de création de profils?" %>
					          <% end %>
					          
					          <% if profile.edit_profile == false or profile.edit_profile.blank? %>                  
					            <%= link_to "<div class = 'icon'><span class = 'ico-user'></span></div>".html_safe, enable_edit_profile_right_path(profile.id), :title => "Activer le droit de création de profil utilisateur", :class => "button blue", :title => "Activer le droit de modification de profil utilisateur", :id => "enable_edit_profile_#{profile.id}", :confirm => "Êtes vous sûr de vouloir activer le droit de modification de profils?" %>					            
					          <% else %>
					            <%= link_to "<div class = 'icon'><span class = 'ico-user'></span></div>".html_safe, disable_edit_profile_right_path(profile.id), :class => "button yellow", :id => "disable_edit_profile_#{profile.id}", :title => "Désactiver le droit de modification de profil utilisateur", :confirm => "Êtes vous sûr de vouloir désactiver le droit de modification de profils?" %>
					          <% end %>	
					          
					          <% if profile.view_transactions == false or profile.view_transactions.blank? %>                  
					            <%= link_to "<div class = 'icon'><span class = 'ico-shopping-cart'></span></div>".html_safe, enable_view_transactions_right_path(profile.id), :class => "button green", :title => "Activer le droit de visualisation des transactions", :confirm => "Êtes vous sûr de vouloir activer le droit de visualisation des transactions?" %>					            
					          <% else %>
					            <%= link_to "<div class = 'icon'><span class = 'ico-shopping-cart'></span></div>".html_safe, disable_view_transactions_right_path(profile.id), :class => "button red", :title => "Désactiver le droit de visualisation des transactions", :confirm => "Êtes vous sûr de vouloir désactiver le droit de visualisation des transactions?" %>
					          <% end %>		
					          
					          <% if profile.disable_account == false or profile.disable_account.blank? %>                  
					            <%= link_to "<div class = 'icon'><span class = 'ico-remove-sign'></span></div>".html_safe, enable_disable_account_right_path(profile.id), :class => "button green", :title => "Activer le droit d'activation/désactivation de compte Paymoney", :confirm => "Êtes vous sûr de vouloir activer le droit d'activation/désactivation de compte Paymoney?" %>					            
					          <% else %>
					            <%= link_to "<div class = 'icon'><span class = 'ico-remove-sign'></span></div>".html_safe, disable_disable_account_right_path(profile.id), :class => "button red", :title => "Désactiver le droit d'activation/désactivation de compte Paymoney", :confirm => "Êtes vous sûr de vouloir désactiver le droit d'activation/désactivation de compte Paymoney?" %>
					          <% end %>				          					                
                  </td>   
                  <td>
                    <%= profile.name %>
                  </td>               
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <% unless @profiles.blank? %>
		      <div id = "pagination">
            <%= paginate @profiles, :params => { :controller => :profiles, :action => :edit_rights } %>
          </div>
        <% end %> 
      </div>
    </div>
  </div> 
</div>
