<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Liste des comptes activés <small>Affichage de la liste des comptes activés</small></h1>
</div>

<div class = "row-fluid">
  <div class = "span12">
    <%= render 'layouts/flash_messages' %>
    <% if !@error_messages.blank? %>  
      <div class = "alert alert-error">         
        <ul>
        <% @error_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <% if !@alert_messages.blank? %>  
      <div class = "alert alert-info">         
        <% @alert_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
    <% if !@success_messages.blank? %> 
      <div class = "alert alert-success">         
        <% @success_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>
        
  <div class="block">  
    <div class="data-fluid tabbable">                    
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#enabled"><b>Comptes activés</b></a></li>
        <li class=""><a data-toggle="" href="<%= disabled_accounts_list_path %>"><b>Comptes désactivés</b></a></li>
      </ul>
      <div class="tab-content">
        <div id="enabled" class="tab-pane active">
          <%
          @head_color = "green"
          @head_status = "activés"
          @label = "label-success"
          @line_color = "bl_green"
          @name_color = "cgreen"
          @accounts = @enabled_accounts
          @action = "index"
        %>
          <%= render partial: "accounts", :locals => {:head_color => @head_color, :head_status => @head_status, :accounts => @accounts, :label => @label, :line_color => @line_color, :name_color => @name_color, :action => @action} %> 
        </div>
      </div>
    </div>
  </div>
</div>
